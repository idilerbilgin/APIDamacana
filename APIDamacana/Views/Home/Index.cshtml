@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>API Damacana</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Products</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: products">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>: <span data-bind="text: Price"></span>
                        <small><a href="#" data-bind="click: $parent.getCartDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Id</td><td data-bind="text: detail().Id"></td></tr>
                <tr><td>Name</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Price</td><td data-bind="text: detail().Price"></td></tr>
 
            </table>
        </div>
    </div>

    <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Add Book</h2>
                </div>

                <div class="panel-body">
                    <form class="form-horizontal" data-bind="submit: addProduct">
                        <div class="form-group">
                            <label for="inputProduct" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <select data-bind="options:names, optionsText: 'Name', value: newProduct.Name"></select>
                            </div>
                            <label for="inputPrice" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                                <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
</div>